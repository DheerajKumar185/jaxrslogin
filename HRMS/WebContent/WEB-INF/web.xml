<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>Login</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>Logout</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>GetLeaveCount</servlet-name>
    <servlet-class>GetLeaveCount</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>LeaveInfo</servlet-name>
    <servlet-class>LeaveInfo</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>ApplyLeave</servlet-name>
    <servlet-class>ApplyLeave</servlet-class>
  </servlet>
  
  
  
    
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>GetLeaveCount</servlet-name>
    <url-pattern>/GetLeaveCount</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>ApplyLeave</servlet-name>
    <url-pattern>/ApplyLeave</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>LeaveInfo</servlet-name>
    <url-pattern>/LeaveInfo</url-pattern>
  </servlet-mapping>
    
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>